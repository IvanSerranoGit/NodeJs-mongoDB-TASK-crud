{{#if tasks}}
<div class="row">
  <div class="" style="margin: 0.5rem 0 1rem 2rem;">
    <table class=" striped centered pink accent-3 white-text">
      <thead>
        <tr>
          <th>No</th>
          <th>Title</th>
          <th>Description</th>
          <th>Operations</th>
        </tr>
      </thead>
      <tbody>
        {{#each tasks}}
          <tr>
          <td>{{@index}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>

          {{#if done}}
            <a href="/tasks/{{_id}}/toggleDone" class="btn-small pink darken-3"><i class="material-icons">check</i> </a>
          {{else}}
            <a href="/tasks/{{_id}}/toggleDone" class="btn-small pink darken-3"><i class="material-icons">close</i> </a>
          {{/if}}

          <a href="/tasks/{{_id}}/delete" class="btn-small pink darken-3"> <i class="material-icons">delete</i> </a>
          <a href="/tasks/{{_id}}/edit" class="btn-small pink darken-3"><i class="material-icons">create</i></a>
        </td>
      </tr>    
    {{/each}}
    </tbody>      
    </table>
  </div>
</div>

  {{else}}
    <div class="center-align white-text">
        <h3>No tasks</h3>
     </div>
     {{/if}}