<div class="container">
  <div class="row">
  <div class="card pink accent-3">
    <div class="card-content white-text">
      <span class="card-title">Edita task</span>
    </div>
    <div class="card-action">
      <form  action="/tasks/{{task._id}}/edit" method="POST" >
        <input
          type="text"
          name="title"
          placeholder="title"
          value="{{task.title}}"
          class="white-text"
          style="margin-bottom: 2em;"
        />
        <textarea
          name="description"
          rows="3"
          placeholder="add a description"
          class="white-text"
          style="border: none;"
        >{{task.description}}</textarea>
        <button style="width: 100%;" class="btn waves-effect pink darken-3">
          Update
        </button>
      </form>
    </div>
  </div>
</div>
</div>